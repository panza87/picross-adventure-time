<div class=bs-docs-featurette>
    <div class=container>
        <h2 class=bs-docs-featurette-title>Sign In</h2>
        <p class=lead>Miss us?</p>
        <hr class=half-rule>
        <div class=row>

            <%= form_tag login_path, class: 'form-horizontal' do %>

              <div class="form-group">
                <%= label_tag :email, nil, class: 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                  <%= email_field_tag :email, nil, class: "form-control", placeholder: "Email Address"%>
                </div>
              </div>
              <div class="form-group">
                <%= label_tag :password, nil, class: 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                  <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password"%>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8" style="text-align: left">
                  <%= submit_tag "Sign In", class: "btn btn-primary" %>
                </div>
              </div>

            <% end %>
        </div>
    </div>
</div>
